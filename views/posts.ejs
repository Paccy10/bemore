<div class="pages">
    <%- include('layouts/partials/messages') %>
    <div class="header-section">
      <h2>Posts</h2>
      <a href="/admin/posts/new" class="btn btn-primary"
        ><i class="fas fa-folder-plus mr-2"></i>Create New Post</a
      >
    </div>
    <table class="table mt-5">
      <thead class="thead-light">
        <tr>
          <th scope="col">title</th>
          <th scope="col">Body</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(typeof posts != 'undefined'){ %> <% posts.forEach(function(post){ %>
        <tr>
          <td><%= post.title.length > 50 ? post.title.substring(0, 50) + '...' : post.title %></td>
          <td><%= post.body.length > 100 ? post.body.substring(0, 100) + '...' : post.body %></td>
          <td>
            <a
              href="/admin/posts/<%= post._id %>/edit"
              class="btn btn-success btn-small"
              >Edit</a
            >
          </td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>
  </div>
  