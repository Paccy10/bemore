<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-folder-plus"></i> New Page
        </h1>
        <%- include('layouts/partials/messages') %>
        <form action="/admin/pages/new" method="POST">
          <div class="form-group">
            <label for="name">Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="title">Title *</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter Title"
              value="<%= typeof title != 'undefined' ? title : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="description">Description *</label>
            <textarea
              class="form-control"
              name="description"
              id="description"
              rows="5"
              placeholder="Enter Description"
            ><%= typeof description != 'undefined' ? description : '' %></textarea
            >
          </div>
          <div class="form-group">
            <input name="noIndex" id="noIndex" type="checkbox" />
            <label for="title">No Index *</label>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
